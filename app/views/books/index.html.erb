<!-- 部分テンプレートの呼び出し(books/_userinfoファイル)-->
<%= render "books/userinfo", {book: @book, user: @user} %>

      <!-- Booksの部分 -->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
            </tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(User.find(book.user_id)) do %>
                    <%= attachment_image_tag User.find(book.user_id), :profile_image, format: "jpeg", fallback: "no_user.jpg", size: "50x50" %>
                    <%= User.find(book.user_id).name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "#{book.title}", book_path(book.id)%>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end%>
        </table>
      </div>
