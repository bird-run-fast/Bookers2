
      <!-- user infoと New bookの部分 -->
      <div class="col-xs-3">
        <!-- user infoの部分 -->
        <h2>User info</h2>

        <%= attachment_image_tag user, :profile_image, :fill, 80, 80, format: "jpeg", fallback: "no_user.jpg"%>
        <h4>name:  <%= user.name%></h4>
        <h4>introduction:  <%= user.introduction %></h4>
        <br>
        <% if user.id == current_user.id %>
          <%= link_to "ユーザー編集", edit_user_path(current_user.id) %>
        <% else %>
          <%= link_to "ユーザー編集", user_path(current_user.id)%>
        <% end %>
        <!-- new book の部分 -->
        <br>
        <br>

        <h2>New book</h2><br>
        <%= form_for(book) do |f| %>
          <% if book.errors.any? %>
            <div>
              <h4><%= book.errors.count %> erorr is ocuured</h4>
              <ul>
                <% book.errors.full_messages.each do |m| %>
                  <li><%= m %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <p>Title</p>
            <%= f.text_field :title%>
          </div>
          <br>
          <div>
            <p>Opinion</p>
            <%= f.text_area :body%>
          </div>
          <br>
          <%= f.submit "Create Book"%>
        <% end %>
      </div>
