<!-- 部分テンプレートの呼び出し(books/_userinfoファイル)-->
<%= render "books/userinfo", {book: @book, user: @user} %>

      <!-- Book detailの部分 -->
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table table-striped">
              <tr>
                <td>
                  <%= link_to  user_path(@user.id) do%>
                    <%= attachment_image_tag @user, :profile_image, format: "jpeg", fallback: "no_user.jpg", size: "50x50" %>
                    <%= @user.name %>
                  <% end%>
                </td>
                <td>
                  <%= @books.title %>
                </td>
                <td>
                  <%= @books.body %>
                </td>
                <% if @user.id == current_user.id %>
                  <td>
                    <%= link_to "Edit", edit_book_path(@books.id)%>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@books.id), method: :delete%>
                  </td>
                <% else %>
              </tr>
            <tr>
          <% end %>
        </table>
      </div>
