<!-- 部分テンプレートの呼び出し(books/_userinfoファイル)-->
<%= render "books/userinfo", {book: @book, user: @user} %>

      <!-- Booksの部分 -->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th> </th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if User.find(book.user_id).profile_image %>
                    <%= image_tag attachment_url(User.find(book.user_id), :profile_image, :fill, 50, 50, format: "jpg") %>
                  <% else %>
                    <%= image_tag "no_user.jpg", :width => "50", :height => "50" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "#{book.title}", book_path(book.id)%>
                </td>
                <td>
                  <%= book.body%>
                </td>
              </tr>
            <% end%>
        </table>
      </div>
